<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ExternED</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-dial" aria-hidden="true"></span> Main
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Combat">
                <span class="oi oi-shield" aria-hidden="true"></span> Combat
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Explore">
                <span class="oi oi-compass" aria-hidden="true"></span> Exploration
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Mining">
                <span class="oi oi-eye" aria-hidden="true"></span> Mining
            </NavLink>
        </li>
    </ul>
    <hr />
    <button class="btn btn-primary">
        Request Docking
    </button>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
